<Window x:Class="DocumentApp_ProizvodstvennayaPraktika.ContractViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentApp_ProizvodstvennayaPraktika"
        mc:Ignorable="d"
        Title="ContractViewWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding Template.TemplateName}" 
               FontSize="22" FontWeight="Bold" Foreground="#2C3E50"
               Margin="0 0 0 10" HorizontalAlignment="Center"/>

        <!-- Информация о договоре -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="10"
            BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Номер договора:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ContractNumber}" 
                     Style="{StaticResource TextBoxStyle}" Margin="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Дата:"/>
                <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding ContractDate}"
                        Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Статус:"/>
                <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding Status}"
                      Style="{StaticResource ComboBoxStyle}" Margin="5">
                    <ComboBoxItem Content="Draft"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Archived"/>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="2" Content="Категория:"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Template.Category.CategoryName}"
                       VerticalAlignment="Center" Margin="5"/>
            </Grid>
        </Border>

        <!-- Содержимое договора -->
        <Border Grid.Row="2" Background="White" CornerRadius="5" Margin="0 10 0 0"
            BorderBrush="#BDC3C7" BorderThickness="1" Padding="10">
            <ScrollViewer>
                <StackPanel>
                    <!-- Динамически создаваемые поля для редактирования -->
                    <ItemsControl x:Name="FieldsContainer" Margin="0 0 0 20"/>

                    <!-- Текст договора -->
                    <TextBox x:Name="ContentBox" Text="{Binding Template.Content}" 
                         Style="{StaticResource TextBoxStyle}" AcceptsReturn="True" 
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True" FontSize="14"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button x:Name="EditBtn" Content="Заполнить договор" Style="{StaticResource ButtonStyle}" 
                Margin="5" Click="EditBtn_Click"/>
            <Button Content="Экспорт в Word" Style="{StaticResource ButtonStyle}" 
                Margin="5" Click="ExportToWord_Click"/>
            <Button Content="Отправить" Style="{StaticResource ButtonStyle}" 
                Margin="5" Click="SendButton_Click"/>
            <Button Content="Закрыть" Style="{StaticResource ButtonStyle}" 
                Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
